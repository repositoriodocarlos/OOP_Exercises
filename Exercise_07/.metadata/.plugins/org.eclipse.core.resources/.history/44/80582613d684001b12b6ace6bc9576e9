package controller;

public class Dinossauro {
	public String nome;
	private int energia;
	private int velocidade;
	private int temperatura;
	private int humor;
	
	public Dinossauro(String nome){
		this.nome = nome;
		energia = 5;
		humor = 5;		
	}
	
	public void pular(){
		energia--;
		humor++;
		System.out.println("O dinossauro " 
				+ nome 
				+ "está pulando. \n");		
	}
	
	public void correr(){
		energia--;
		humor++;
		System.out.println("O dinossauro " 
							+ nome 
							+ "está correndo. \n");
	}
	
	public void comer(){
		energia++;
		humor++;
		System.out.println("O dinossauro " 
							+ nome 
							+ " acaba de comer, ganhou energia e está mais feliz. \n");		
	}
	
	public void brincar(){
		energia--;
		humor++;
		System.out.println("O dinossauro " 
				+ nome 
				+ " está brincando, portanto está mais feliz.\n");		
	}
	
	public void tomarSol(){
			humor ++;		
			velocidade ++;
			energia--;
			System.out.println("O dinossauro "
								+ nome
								+ " está um pouco mais feliz e mais veloz!\n");
	}
	
	public void ficarNaSombra(){		
		energia++;
		humor--;
		System.out.println("O dinossauro " 
							+ nome
							+ " está descansando na sombra.\n");
	}
	
	@Override
	public String toString(){
		return "Dinossauro " + nome +": \n"
				+ "energia: " + energia +": \n"
				+ "velocidade: " + velocidade +": \n"
				+ "temperatura: " + temperatura +": \n"
				+ "humor: " + humor +": \n";
	}
	

}
